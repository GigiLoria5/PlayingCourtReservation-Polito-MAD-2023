<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    tools:context=".ShowProfileActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <!-- Primary Information -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/primary_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Avatar -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/avatar_description"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/profile_default"
            app:layout_constraintBottom_toTopOf="@+id/user_main_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:shapeAppearanceOverlay="@style/circular"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp" />

        <!-- Main User Info -->
        <LinearLayout
            android:id="@+id/user_main_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatar">

            <LinearLayout
                android:id="@+id/username_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_username"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/custom_black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/warning_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/warning_icon_description"
                    android:src="@drawable/baseline_warning_24"
                    android:visibility="gone"
                    tools:ignore="ImageContrastCheck" />

                <ImageView
                    android:id="@+id/danger_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/danger_icon_description"
                    android:src="@drawable/baseline_dangerous_24"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="@string/default_position"
                android:textColor="@color/grey"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/rating"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/rating_description"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="@fraction/default_rating"
                android:theme="@style/ratingBar" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vertical_guideline"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Secondary Information -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/secondary_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_border"
                android:padding="16dp">

                <it.polito.mad.g26.playingcourtreservation.CustomTextView
                    android:id="@+id/fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:title="@string/fullname_title"
                    app:value="@string/default_fullname" />

                <LinearLayout
                    android:id="@+id/user_information_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fullname">

                    <it.polito.mad.g26.playingcourtreservation.CustomTextView
                        android:id="@+id/age"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:title="@string/age_title"
                        app:value="@integer/default_age" />

                    <it.polito.mad.g26.playingcourtreservation.CustomTextView
                        android:id="@+id/gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:title="@string/gender_title"
                        app:value="@string/default_gender" />

                    <it.polito.mad.g26.playingcourtreservation.CustomTextView
                        android:id="@+id/placeholder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:title=""
                        app:value="" />
                </LinearLayout>

                <it.polito.mad.g26.playingcourtreservation.CustomTextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/user_information_container"
                    app:title="@string/location_title"
                    app:value="@string/default_location" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Stats Container -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/stats_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/vertical_guideline"
                app:layout_constraintTop_toBottomOf="@+id/secondary_information">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/stats_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_container_title"
                        android:textColor="@color/custom_black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Games Stats -->
                    <LinearLayout
                        android:id="@+id/game_stats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/stats_title">

                        <it.polito.mad.g26.playingcourtreservation.CustomTextView
                            android:id="@+id/organized"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:title="@string/games_organized_title"
                            app:value="@integer/default_organized" />

                        <it.polito.mad.g26.playingcourtreservation.CustomTextView
                            android:id="@+id/played"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:title="@string/games_played_title"
                            app:value="@integer/default_played" />

                        <it.polito.mad.g26.playingcourtreservation.CustomTextView
                            android:id="@+id/record"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:title="@string/games_record_title"
                            app:value="@string/default_wdl" />
                    </LinearLayout>

                    <!-- Personal Stats -->
                    <LinearLayout
                        android:id="@+id/personal_stats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/stats_title">

                        <it.polito.mad.g26.playingcourtreservation.CustomTextView
                            android:id="@+id/goals"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:title="@string/games_goals_title"
                            app:value="@integer/default_goals" />

                        <it.polito.mad.g26.playingcourtreservation.CustomTextView
                            android:id="@+id/assists"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:title="@string/games_assists_title"
                            app:value="@integer/default_assists" />

                        <it.polito.mad.g26.playingcourtreservation.CustomTextView
                            android:id="@+id/mvp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:title="@string/games_mvp_title"
                            app:value="@integer/default_mvp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>