<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.searchFragments.SearchSportCentersFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/reviewListABL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/searchResultsTextCL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pageExternalSpace"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sportCenterTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sport_center_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/courtTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/court_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sportCentersRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reviewListABL"
        tools:listitem="@layout/review_item" />

</androidx.constraintlayout.widget.ConstraintLayout>