<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/courtCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:minWidth="@dimen/courtBoxMinDim"
        android:minHeight="@dimen/courtBoxMinDim"
        app:cardBackgroundColor="@color/green_500"
        app:cardCornerRadius="@dimen/cornerRadius"
        app:cardElevation="@dimen/courtBoxElevation"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/MarginsPaddingsCourtInfoBox">

            <TextView
                android:id="@+id/courtNameTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/court_name"
                android:textColor="@color/white"
                android:textSize="@dimen/courtNameCourtBox"
                app:layout_constraintBottom_toTopOf="@id/courtDataCL"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/courtDataCL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/courtNameTV">

                <TextView
                    android:id="@+id/courtAvailabilityTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/MarginsPaddingsCourtInfoBox"
                    android:layout_marginBottom="@dimen/MarginsPaddingsCourtInfoBox"
                    android:text="@string/court_availability"
                    android:textColor="@color/white"

                    app:layout_constraintBottom_toTopOf="@id/courtTypeTV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    />


                <TextView
                    android:id="@+id/courtTypeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/court_type"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toTopOf="@id/courtPriceTV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/courtAvailabilityTV"

                    />

                <TextView
                    android:id="@+id/courtPriceTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/court_price"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/courtTypeTV" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>