<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    tools:context=".fragment.ShowProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fillViewport="true"
        android:paddingBottom="16dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vertical_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.33" />

            <!-- Primary Information -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/primary_information"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/vertical_guideline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <!-- Avatar -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/profile_image"
                    android:layout_height="@dimen/profile_image"
                    android:contentDescription="@string/avatar_description"
                    android:padding="4dp"
                    android:layout_marginTop="25dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile_default"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/circular"
                    app:strokeColor="@color/black"
                    app:strokeWidth="4dp" />

                <!-- Main User Info -->
                <LinearLayout
                    android:id="@+id/user_main_info"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/avatar">

                    <LinearLayout
                        android:id="@+id/username_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@string/default_username"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/custom_black"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/warning_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/warning_icon_description"
                            android:src="@drawable/baseline_warning_24"
                            android:visibility="gone"
                            tools:ignore="ImageContrastCheck" />

                        <ImageView
                            android:id="@+id/danger_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/danger_icon_description"
                            android:src="@drawable/baseline_dangerous_24"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/position"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginVertical="8dp"
                        android:text="@string/default_position"
                        android:textColor="@color/grey"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Secondary Information -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/secondary_information"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/bottom_border"
                android:paddingBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/vertical_guideline">

                <it.polito.mad.g26.playingcourtreservation.ui.CustomTextView
                    android:id="@+id/fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:title="@string/fullname_title"
                    app:value="@string/default_fullname" />

                <LinearLayout
                    android:id="@+id/user_information_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fullname">

                    <it.polito.mad.g26.playingcourtreservation.ui.CustomTextView
                        android:id="@+id/age"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:title="@string/age_title"
                        app:value="@integer/default_age" />

                    <it.polito.mad.g26.playingcourtreservation.ui.CustomTextView
                        android:id="@+id/gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:title="@string/gender_title"
                        app:value="@string/default_gender" />

                    <it.polito.mad.g26.playingcourtreservation.ui.CustomTextView
                        android:id="@+id/placeholder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:title=""
                        app:value="" />
                </LinearLayout>

                <it.polito.mad.g26.playingcourtreservation.ui.CustomTextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/user_information_container"
                    app:title="@string/location_title"
                    app:value="@string/default_location" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Stats Container -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/show_profile_recycler_view"
                app:layout_constraintTop_toBottomOf="@id/secondary_information"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>