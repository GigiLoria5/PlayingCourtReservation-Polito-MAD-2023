<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_navigation"
    app:startDestination="@id/searchCourtFragment">

    <fragment
        android:id="@+id/showProfileFragment"
        android:name="it.polito.mad.g26.playingcourtreservation.fragment.ShowProfileFragment"
        android:label="activity_show_profile"
        tools:layout="@layout/activity_show_profile">
        <action
            android:id="@+id/action_showProfileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="it.polito.mad.g26.playingcourtreservation.fragment.EditProfileFragment"
        android:label="activity_edit_profile"
        tools:layout="@layout/activity_edit_profile" />
    <fragment
        android:id="@+id/searchCourtFragment"
        android:name="it.polito.mad.g26.playingcourtreservation.fragment.searchFragments.SearchCourtFragment"
        android:label="fragment_search_court"
        tools:layout="@layout/fragment_search_court">
        <action
            android:id="@+id/action_searchCourtFragment_to_searchCourtActionFragment"
            app:destination="@id/searchCourtActionFragment">
            <argument android:name="bornFrom" />
        </action>
        <action
            android:id="@+id/action_searchCourtFragment_to_searchCourtResultsFragment"
            app:destination="@id/searchCourtResultsFragment">
            <argument android:name="bornFrom" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/reservationsFragment"
        android:name="it.polito.mad.g26.playingcourtreservation.fragment.ReservationsFragment"
        android:label="fragment_reservations"
        tools:layout="@layout/reservations_fragment">
        <action
            android:id="@+id/openReservationDetails"
            app:destination="@id/reservationDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/reservationDetailsFragment"
        android:name="it.polito.mad.g26.playingcourtreservation.fragment.ReservationDetailsFragment"
        android:label="ReservationDetailsFragment">
        <argument
            android:name="reservationId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/searchCourtActionFragment"
        android:name="it.polito.mad.g26.playingcourtreservation.fragment.searchFragments.SearchCourtActionFragment"
        android:label="fragment_search_court_action"
        tools:layout="@layout/fragment_search_court_action">
        <argument
            android:name="city"
            app:argType="string" />
        <argument
            android:name="bornFrom"
            app:argType="string" />
        <action
            android:id="@+id/action_searchCourtActionFragment_to_searchCourtResultsFragment"
            app:destination="@id/searchCourtResultsFragment">
            <argument android:name="bornFrom" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/searchCourtResultsFragment"
        android:name="it.polito.mad.g26.playingcourtreservation.fragment.searchFragments.SearchCourtResultsFragment"
        android:label="fragment_search_court_results"
        tools:layout="@layout/fragment_search_court_results">
        <argument
            android:name="city"
            app:argType="string" />
        <argument
            android:name="bornFrom"
            app:argType="string" />
        <action
            android:id="@+id/action_searchCourtResultsFragment_to_searchCourtActionFragment"
            app:destination="@id/searchCourtActionFragment">
            <argument android:name="bornFrom" />
        </action>
    </fragment>
</navigation>